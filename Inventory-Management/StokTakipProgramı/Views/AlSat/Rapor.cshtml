
@{
    ViewData["Title"] = "Rapor";

}
@{
    var alis = ViewBag.Alis;
    var satis = ViewBag.Satis;
    var transfer = ViewBag.Transfer;
}

<script src="~/Theme/plugins/jquery/jquery.min.js"></script>

<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Alış Raportları</h3>
                    </div>
                    @if (alis != null)
                    {
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Ürün Kodu</th>
                                        <th>Ürün Adı</th>
                                        <th>Ürün Miktarı</th>                                      
                                        <th>Alış Fiyatı</th>                                        
                                        <th>Toplam Fiyat</th>
                                        <th>Alış Tarihi</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in alis)
                                    {
                                    <tr>
                                        <td>@item.AStokKodu</td>
                                        <td>@item.AStokAdı</td>
                                        <td>@item.AlisMiktarı</td>
                                        <td>@item.ABirimFiyat</td>
                                        <td>@item.AToplamFiyat</td>
                                        <td>@item.AlisTarihi</td>

                                    </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Alış Eklenmemiş.
                        </div>
                    }
                    <!-- /.card-header -->
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

