@model IEnumerable<Product>
@{
    ViewData["Title"] = "StokSat";

}
@{
    var stokkart = ViewBag.StokKart;
    var depo = ViewBag.Depolar;
}


<script src="~/Theme/plugins/jquery/jquery.min.js"></script>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div style="margin-top:10px" class="card">
                    <div class="card-header">
                        <h3 class="card-title">Satış Yapmak İstediğiniz Ürünü Seçin</h3>
                    </div>
                    <!-- /.card-header -->
                    @if (Model.Count() > 0)
                    {
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Ürün Kodu</th>
                                        <th>Ürün Adı</th>
                                        <th>Ürün Birimi</th>
                                        <th>Ürün Açıklama</th>
                                        <th>Alış Fiyatı</th>
                                        <th>Satış Fiyatı</th>
                                        <th>Ürün Adedi</th>
                                        <th>Depo Adı</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @foreach (var stok in stokkart)
                                            {
                                                @if (stok.StokKartId == item.StokKartId)
                                                {
                                                    <td>@stok.StokKodu</td>
                                                    <td>@stok.StokAdi</td>
                                                    <td>@stok.StokBirim</td>
                                                    <td style="max-width:300px">@stok.StokAciklama</td>
                                                    <td>@stok.StokAlis</td>
                                                    <td>@stok.StokSatis</td>
                                                }
                                            }
                                            <td>@item.ProductAdet</td>

                                            @foreach (var dp in depo)
                                            {
                                                @if (dp.DepoId == item.DepoId)
                                                {

                                                    <td>@dp.DepoAdi</td>
                                                }
                                            }

                                            <td>
                                                <a class="btn btn-primary btn-sm" asp-controller="AlSat" asp-action="SatisYap" asp-route-id="@item.ProductId" asp-route-value="@item.ProductAdet">
                                                    Satış Yap
                                                </a>                                              
                                            </td>

                                        </tr>
                                    }
                     

                                </tbody>

                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Stok Kartı Eklenmemiş.
                        </div>
                    }
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Page specific script -->
<script>
    $(function () {
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>

