@model IEnumerable<Depo>
@{
    ViewData["Title"] = "Islemler";

}


<script src="~/Theme/plugins/jquery/jquery.min.js"></script>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div style="margin-top:10px" class="card">
                    <div class="card-header">
                        <h3 class="card-title">Depo İşlemleri</h3>
                    </div>
                    <!-- /.card-header -->
                    @if (Model.Count() > 0)
                    {
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Depo Kodu</th>
                                        <th>Depo Adı</th>
                                        <th>Depo Adresi</th>
                                        <th>Depo Açıklama</th>                                       
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DepoKodu</td>
                                            <td>@item.DepoAdi</td>
                                            <td>@item.DepoAdres</td>
                                            <td style="max-width:300px">@item.DepoAciklama</td>
                                            
                                            <td style="max-width:60px">
                                                <a class="btn btn-primary btn-sm" asp-controller="Depo" asp-action="Update" asp-route-id="@item.DepoId">
                                                    Edit
                                                </a>
                                                <a class="btn btn-danger btn-sm" asp-controller="Depo" asp-action="Delete" asp-route-id="@item.DepoId"
                                                   onclick="return confirm('Depoyu silmek istiyor musunuz?');">
                                                    Delete
                                                </a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Depo Eklenmemiş.
                        </div>
                    }
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Page specific script -->
<script>
        $(function () {
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
</script>

