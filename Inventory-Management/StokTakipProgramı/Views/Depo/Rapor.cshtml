@model IEnumerable<Depo>
@{
    ViewData["Title"] = "Rapor";

}
<script src="~/Theme/plugins/jquery/jquery.min.js"></script>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Depo Raportları</h3>
                    </div>
                    @if (Model.Count() > 0)
                    {
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Depo Kodu</th>
                                        <th>Depo Adı</th>
                                        <th>Depo Adresi</th>
                                        <th>Depo Açıklama</th>                                     
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DepoKodu</td>
                                            <td>@item.DepoAdi</td>
                                            <td>@item.DepoAdres</td>
                                            <td style="max-width:300px">@item.DepoAciklama</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Depo Eklenmemiş.
                        </div>
                    }
                    <!-- /.card-header -->
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Page specific script -->
<script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
</script>





